
@{
    Layout = "_HotelLayout";
    Hotel_ExtraDto servicesDto= new Hotel_ExtraDto();
    ViewData["title"]= "Add Services";
  //  servicesDtoLists.Add(new Hotel_ExtraDto()); // Add an initial empty item to the list
}
<style>
    .services-container {
        display: flex;
        flex-wrap: wrap;
        justify-content: flex-start;
    }

    .service {
        width: 100%;
        margin-bottom: 20px;
    }

    /* Adjust this media query breakpoint according to your needs */
   .profile-picture {
    height: 200px;
    width: 200px;
    object-fit: cover;
}
</style>



<!-- Rest of your code -->
<div class="row" style="flex:1">
    <div class="col-lg-12">
        <div class="card">
            <div class="card-body">
                <form method="post" id="servicesForm" enctype="multipart/form-data" >
                     <div class="services-container">
                  
                  <input hidden asp-for="@servicesDto.Hotel_ExtraEntityId" name="Extra_ServiceEntityId" />

                        <div  class="service">
                            <div class="form-group row">
                                <label class="col-form-label col-md-2">Name of service</label>
                                <div class="col-md-10">
                                    <input id="Name" type="text" asp-for="@servicesDto.Name" name="Name" class="form-control form-control-lg">
                                </div>
                                <div> <span  class="text-danger" id="VName"></span></div>
                            </div>

                            <div class="form-group row">
                                <label class="col-form-label col-md-2">Price</label>
                                <div class="col-md-10">
                                    <div class="input-group">
                                    <input type="number" id="price" asp-for="@servicesDto.Price" name="Price" min="0"  class="form-control form-control-sm">
                                    <div class="input-group-append">
														<span class="input-group-text" id="basic-addon2">SY</span>
													</div>
                                    </div>
                                </div>
                                    <div class="text-danger" id="VPrice"></div>

                            </div>

                            <div class="form-group row">
                                <label class="col-form-label col-md-2">Description</label>
                                <div class="col-md-10">
                                    <textarea rows="5" cols="5" asp-for="@servicesDto.Description"id="Description" name="Description" class="form-control" placeholder="Enter text here"></textarea>
                                </div>
                                <div class="text-danger" id="VDescription"></div>
                            </div>
                            <div class="form-group row">
                               <label class="col-form-label col-md-2">Service Photo</label>  

                                <div class="col-md-10">
												<div class="form-group">
												
													@if(servicesDto.ServicePhoto != null )
													{
													<img class="profile-picture mt-25" id="ServicePhoto"alt="ServicePhoto" src="data:image/*,base64,@(Convert.ToBase64String(servicesDto.ServicePhoto))">
						                           	}
													else
						                          	{
							                       <img class="profile-picture mt-25" id="ServicePhoto"alt="ServicePhoto" src="/assets/img/avatar-male.jpg">	
												   
						                          	}
							                      <div class="custome-file mt-2" >
													  <input type="file" 
													  accept="image/*"
													   asp-for="@servicesDto.ServicePhoto"
													   class="custom-file-input"
													      onchange="document.getElementById('ServicePhoto').src = window.URL.createObjectURL(this.files[0])"
													  />
												<label class="custom-file-label" asp-for="@servicesDto.ServicePhoto" > Choose file picutre for your service..</label>
												<span class ="text-danger" asp-validation-for="@servicesDto.ServicePhoto"></span>
												  </div>
													
												</div>
									

										</div>
                            </div>
                               
                        </div>
                    
                    </div>
                    <div class="form-group row">
                        <div class="col-md-2"></div>
                        <div class="col-md-10">
                      <button class="btn btn-secondary" style="color:white; background-color:green" asp-action="AddHotelService" type="submit">Save</button>
                        </div>
                    </div>
                  

                </form>
            </div>
        </div>
    </div>
</div>
<script src="/assets/js/jquery-3.2.1.min.js"></script>
<script src="~/assets/js/ValidateforService.js"></script>
