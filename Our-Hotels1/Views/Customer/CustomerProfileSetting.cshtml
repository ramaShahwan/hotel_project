@using Microsoft.AspNet.Identity
@using Microsoft.Extensions.Localization;
@using Our_Hotels1.Resources.Views.Hotel;
@using System.Globalization;
@using OurHotels.Dto.Customer;
@model OurHotels.Dto.Customer.CustomerDto;

@inject IStringLocalizer<HotelProfilesettingResource> Localizer;
@{
    Layout = "_layout";

    CustomerDto editDto = new CustomerDto();
    var userId = User.Identity.GetUserId();
    editDto.UserEntityId = userId;
    CustomerDto customerDto = ViewData["CustomerProfileSetting"] != null ? (CustomerDto)ViewData["CustomerProfileSetting"] : null;
}
