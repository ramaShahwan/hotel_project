                            <select asp-for="@editDto.gender" class="form-control select" >

                                @if (customerDto.gender.ToString() == "Female")
                                {
                                    <option selected>Female</option>
                                    <option>Male</option>
                                }
                                else if (customerDto.gender.ToString() == "Male")
                                {
                                    <option selected>Male</option>
                                    <option>Female</option>
                                }

                                
                            </select>
                            <span asp-validation-for="@editDto.gender" class="text-danger"></span>
                        </div>
                    </div>*@

                    <div class="col-12 col-md-6">
                        <div class="form-group">
                            <label asp-for="@editDto.phoneNumber">@Localizer["Phone Number"]</label>
                            <input type="text" asp-for="@editDto.phoneNumber" class="form-control" minlength="9" value="@customerDto.phoneNumber">
                            <span asp-validation-for="@editDto.phoneNumber" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="col-12 col-md-6">
                        <div class="form-group">
                            <label asp-for="@editDto.Birthday">@Localizer["Birthday"]</label>
                            <input type="text" class="form-control" asp-for="@editDto.Birthday" value="@customerDto.Birthday">
                            <span asp-validation-for="@editDto.Birthday" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="col-12 col-md-6">
                        <div class="form-group">
                            @*<label asp-for="@addHotelDto.IdentityCertifcate">Identity Certifecate photo </label>*@
                            @*@if (Model.Identity_Certificate != null)*@
                            @*{
                                    <img class="profile-picture mt-25 " id="IdentityCertificate" alt="Identity Certifacre" src="data:image/*;base64,@(Convert.ToBase64String(Model.Identity_Certificate))">
                                }
                                else
                                {
                                    <img class="profile-picture mt-25" id="IdentityCertificate" alt="Identity Certifacre" src="/assets/img/avatar-male.jpg">

                                }
                                <div class="custome-file mt-2">
                                    <input type="file"
                                           accept="image/*"
                                           asp-for="@editDto.Identity_Certificate"
                                           class="custom-file-input"
                                           onchange="document.getElementById('IdentityCertificate').src = window.URL.createObjectURL(this.files[0])" />
                                    <label class="custom-file-label" asp-for="@editDto.Identity_Certificate"> Choose file picture of your Identity Certificate..</label>
                                    <span class="text-danger" asp-validation-for="@editDto.Identity_Certificate"></span>
                                </div>*@
                        </div>
                    </div>
                </div>
                <div class="submit-section">
                    <button type="submit" class="btn btn-primary submit-btn">Save Changes</button>
                </div>
            </form>
            <!-- /Profile Settings Form -->
        </div>
    </div>
</div>

<script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
