</style>
<div class="col-md-7 col-lg-8 col-xl-9" style="justify-content:center">
    <div class="card">
        <div class="card-body">

            <!-- Profile Settings Form -->
            <form asp-controller="Customer" asp-action="EditCustomerProfileSetting" method="post" enctype="multipart/form-data">

                <!-- Rest of the form code -->
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" name="CustomerEntityId" asp-for="@customerDto.CustomerEntityId" value="@customerDto.CustomerEntityId" asp-route-Id="@customerDto.CustomerEntityId">
                <input type="hidden" name="CustomerEntityId" asp-for="@editDto.CustomerEntityId" value="@customerDto.CustomerEntityId" asp-route-Id="@customerDto.CustomerEntityId" >
                <div class="row form-row">
                    <div class="col-12 col-md-12">
                        <div class="form-group">
                            <div class="change-avatar">
                                <div class="pro11file-img">
                                    <img src="assets/img/patients/patient.jpg" alt="User Image">
                                </div>

                            </div>
                        </div>
                    </div>

                    <input type="hidden" asp-for="@editDto.UserEntityId" />
                    <div class="col-12 col-md-6">
                        <div class="form-group">
                            <label asp-for="@editDto.FirstName">@Localizer["First Name"] </label>
                            <input type="text" class="form-control" asp-for="@editDto.FirstName" value="@customerDto.FirstName">
                            <span asp-validation-for="@editDto.FirstName" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-12 col-md-6">
                        <div class="form-group">
                            <label asp-for="@editDto.LastName">@Localizer["Last Name"]</label>
                            <input type="text" class="form-control" asp-for="@editDto.LastName" value="@customerDto.LastName">
                            <span asp-validation-for="@editDto.LastName" class="text-danger"></span>
                        </div>
                    </div>


                 @*   <div class="col-12 col-md-6">
