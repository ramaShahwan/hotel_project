@section Scripts {
    <partial name="_ValidationScriptsPartial" />
	    <script>
        function validateForm() {
            var first = document.getElementById("First").value.trim();
            var last = document.getElementById("Last").value.trim();
			var mobile= document.getElementById("mobile").value.trim();
			 // if (first === "" && last==="") {
				//    var elements = document.getElementById("NV");
                  // for (var i = 0; i < elements.length; i++) {
                    //   elements[i].innerHTML = "Customer name is required";
               // @*document.getElementById("NV").innerHTML = "Customer  name is required";*@
                //return false; // Prevent form submission
           // }
            if (first === "") {
                document.getElementById("FirstV").innerHTML = "Customer first name is required";
              //  return false; // Prevent form submission
            }
            
            if (last === "") {
                document.getElementById("LastV").innerHTML = "Customer last name is required";
               // Prevent form submission
            }
			if (mobile === "") {
                document.getElementById("mobileV").innerHTML = "Customer mobile is required";
                return false; // Prevent form submission
            }

            return true; // Allow form submission
        }
    </script>

}
