@page
@model RegisterModel1
			<!-- Page Content -->
			<div class="content">
				<div class="container-fluid">
					
					<div class="row">
						<div class="col-md-8 offset-md-2">
								
							<!-- Register Content -->
							<div class="account-content">
								<div class="row align-items-center justify-content-center">
									<div class="col-md-7 col-lg-6 login-left">
										<img src="/assets/img/log-in1.jpg" class="img-fluid" alt="Hotel Register">	
									</div>
									<div class="col-md-12 col-lg-6 login-right">
										<div class="login-header">
											<h3>Hotel Register <a asp-page="/Account/Register">Are you a customer?</a></h3>
										</div>
										
										<!-- Register Form -->
										<form asp-route-returnUrl="@Model.ReturnUrl" method="post" >
											  <input  type="hidden" value="Input.UserType"/>
											  <div asp-validation-summary="ModelOnly" class="text-danger"></div>
											<div class="form-group form-focus">
												<input type="email" asp-for="Input.Email" class="form-control floating">
												<label asp-for="Input.Email" class="focus-label">Email</label>
												  <span asp-validation-for="Input.Email" class="text-danger"></span>
											</div>
										
											<div class="form-group form-focus">
												<input type="password" asp-for="Input.Password" class="form-control floating">
												<label asp-for="Input.Password" class="focus-label">Create Password</label>
												  <span asp-validation-for="Input.Password" class="text-danger"></span>
											</div>
											<div class="form-group form-focus">
												<input type="password" asp-for="Input.ConfirmPassword" class="form-control floating">
												<label asp-for="Input.ConfirmPassword" class="focus-label">Confirm password</label>
												  <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
											</div>
											<div class="text-right">
												<a class="forgot-link" asp-page="/Account/login">Already have an account?</a>
											</div>
											<button class="btn btn-primary btn-block btn-lg login-btn" type="submit" >Signup</button>
											<div class="login-or">
												<span class="or-line"></span>
												<span class="span-or">or</span>
											</div>
											@*<div class="row form-row social-login">
												<div class="col-6">
													<a href="#" class="btn btn-facebook btn-block"><i class="fab fa-facebook-f mr-1"></i> Login</a>
												</div>
												<div class="col-6">
													<a href="#" class="btn btn-google btn-block"><i class="fab fa-google mr-1"></i> Login</a>
												</div>
											</div>*@
										</form>
										<!-- /Register Form -->
										
									</div>
								</div>
							</div>
							<!-- /Register Content -->
								
						</div>
					</div>
					
				</div>
				 <div class="col-md-6 col-md-offset-2">
       
    </div>
</div>			
		<!-- /Main Wrapper -->
	  
		<!-- jQuery -->
		<script src="assets/js/jquery.min.js"></script>
		
		<!-- Bootstrap Core JS -->
		<script src="assets/js/popper.min.js"></script>
		<script src="assets/js/bootstrap.min.js"></script>
		
		<!-- Custom JS -->
		<script src="assets/js/script.js"></script>
		
	

